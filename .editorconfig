# root = true

[*.cs]
# csharp_new_line_before_open_brace = methods
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
dotnet_diagnostic.SA1101.severity=silent # Prefix local calls with this
dotnet_diagnostic.SA1200.severity=silent # Using directives should be placed correctly
dotnet_diagnostic.SA1309.severity=silent # Field names should not begin with underscore
dotnet_diagnostic.SA1503.severity=silent # Braces should not be omitted
dotnet_diagnostic.SA1515.severity=silent # Single-line comment should be preceded by blank line
dotnet_diagnostic.SA1128.severity=silent # Put constructor initializers on their own line
dotnet_diagnostic.SA1413.severity=silent # Use trailing comma in multi-line initializers

[*.json]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
